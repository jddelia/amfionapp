  },
  "devDependencies": {
    "tsup": "^8.2.4",
    "tsx": "^4.19.0",
    "typescript": "^5.6.3",
    "vitest": "^2.1.1",
    "eslint": "^9.10.0",
    "prettier": "^3.3.3"
  }
}
