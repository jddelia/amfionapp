{
  "name": "amfionapp",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.3",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "pnpm --filter @amfion/web dev",
    "dev:api": "pnpm --filter @amfion/shared build && pnpm --filter @amfion/integrations build && pnpm --filter @amfion/api dev",
    "dev:worker": "pnpm --filter @amfion/shared build && pnpm --filter @amfion/worker dev",
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "format": "pnpm -r format"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.5.0",
    "@typescript-eslint/parser": "^8.5.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0"
  }
}
